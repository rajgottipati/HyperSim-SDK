{
  "name": "@hypersim/doc-generator",
  "version": "1.0.0",
  "description": "AI-powered documentation generation system for HyperSim SDK multi-language implementations",
  "main": "dist/index.js",
  "bin": {
    "hypersim-docs": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "ts-node src/cli.ts",
    "generate": "ts-node src/cli.ts generate",
    "analyze": "ts-node src/cli.ts analyze",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist generated-docs"
  },
  "keywords": [
    "documentation",
    "generator",
    "ai",
    "openai",
    "sdk",
    "hyperevm",
    "multi-language",
    "automation"
  ],
  "author": "MiniMax Agent",
  "license": "MIT",
  "dependencies": {
    "openai": "^4.20.0",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "inquirer": "^9.2.11",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.10",
    "markdown-it": "^13.0.2",
    "handlebars": "^4.7.8",
    "ora": "^7.0.1",
    "yaml": "^2.3.4",
    "node-html-parser": "^6.1.10",
    "typescript": "^5.2.2",
    "prettier": "^3.0.3",
    "highlight.js": "^11.9.0",
    "marked": "^9.1.6",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/fs-extra": "^11.0.4",
    "@types/markdown-it": "^13.0.7",
    "@types/inquirer": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist/**/*",
    "templates/**/*",
    "README.md"
  ]
}